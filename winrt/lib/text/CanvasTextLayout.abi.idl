            [in] INT32 characterIndex,
            [in] INT32 characterCount,
            [in] Microsoft.Graphics.Canvas.Brushes.ICanvasBrush* brush);

        HRESULT SetCustomBrush(
            [in] INT32 characterIndex,
            [in] INT32 characterCount,
            [in] IInspectable* brush);

        HRESULT SetFontFamily(
            [in] INT32 characterIndex,
            [in] INT32 characterCount,
            [in] HSTRING fontFamily);

        HRESULT SetFontSize(
            [in] INT32 characterIndex,
