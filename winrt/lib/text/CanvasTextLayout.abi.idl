            [in] INT32 characterIndex,
            [in] INT32 characterCount,
            [in] boolean hasStrikethrough);

        HRESULT SetUnderline(
            [in] INT32 characterIndex,
            [in] INT32 characterCount,
            [in] boolean hasUnderline);

        HRESULT SetInlineObject(
            [in] INT32 characterIndex,
            [in] INT32 characterCount,
            [in] ICanvasTextInlineObject* inlineObject);

